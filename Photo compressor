    <script>
        // DOM Elements
        const fileInput = document.getElementById('fileInput');
        const uploadBtn = document.getElementById('uploadBtn');
        const dropArea = document.getElementById('dropArea');
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        const reductionValue = document.getElementById('reductionValue');
        const previewSection = document.getElementById('previewSection');
        const originalImage = document.getElementById('originalImage');
        const compressedImage = document.getElementById('compressedImage');
        const originalFormat = document.getElementById('originalFormat');
        const originalSize = document.getElementById('originalSize');
        const compressedFormat = document.getElementById('compressedFormat');
        const compressedSize = document.getElementById('compressedSize');
        const sizeReduction = document.getElementById('sizeReduction');
        const compressBtn = document.getElementById('compressBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        
        // Upload button click event
        uploadBtn.addEventListener('click', () => {
            fileInput.click();
        });
        
        // File input change event
        fileInput.addEventListener('change', handleFileSelect);
        
        // Drag and drop events
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.style.borderColor = '#4361ee';
            dropArea.style.backgroundColor = 'rgba(67, 97, 238, 0.1)';
        }
        
        function unhighlight() {
            dropArea.style.borderColor = '#4361ee';
            dropArea.style.backgroundColor = '';
        }
        
        // Handle dropped files
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            if (files.length) {
                handleFiles(files[0]);
            }
        }
        
        // Handle file selection
        function handleFileSelect(e) {
            const file = e.target.files[0];
            if (file) {
                handleFiles(file);
            }
        }
        
        // Process selected file
        function handleFiles(file) {
            // Check file type
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, GIF, WebP)');
                return;
            }
            
            // Check file size
            if (file.size > 5 * 1024 * 1024) {
                alert('File size exceeds 5MB limit. Please choose a smaller image.');
                return;
            }
            
            // Display file info
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage.src = e.target.result;
                
                // Show preview section
                previewSection.style.display = 'grid';
                
                // Update file info
                const format = file.name.split('.').pop().toUpperCase();
                originalFormat.textContent = format;
                originalSize.textContent = formatFileSize(file.size);
            };
            reader.readAsDataURL(file);
        }
        
        // Format file size
        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' bytes';
            else if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
            else return (bytes / 1048576).toFixed(1) + ' MB';
        }
        
        // Compression slider event
        qualitySlider.addEventListener('input', function() {
            qualityValue.textContent = this.value + '%';
            
            // Update estimated reduction
            const reduction = 100 - this.value;
            reductionValue.textContent = Math.round(reduction * 0.7) + '-' + Math.round(reduction * 0.9) + '%';
        });
        
        // Compress button event
        compressBtn.addEventListener('click', function() {
            if (!originalImage.src) {
                alert('Please upload an image first');
                return;
            }
            
            // Show loading state
            compressBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Compressing...';
            compressBtn.disabled = true;
            
            // Simulate compression (in a real app, this would use canvas compression)
            setTimeout(() => {
                // For demo purposes, we'll just show the same image
                compressedImage.src = originalImage.src;
                
                // Get format
                const format = document.querySelector('input[name="format"]:checked').value.toUpperCase();
                compressedFormat.textContent = format;
                
                // Calculate compressed size (simulated)
                const originalSizeValue = getFileSizeFromBase64(originalImage.src);
                const compressedSizeValue = Math.max(originalSizeValue * (qualitySlider.value / 100) * 0.7, 1);
                compressedSize.textContent = formatFileSize(compressedSizeValue);
                
                // Calculate reduction
                const reduction = Math.round(100 - (compressedSizeValue / originalSizeValue * 100));
                sizeReduction.textContent = reduction + '%';
                
                // Show download button
                downloadBtn.style.display = 'block';
                
                // Reset button
                compressBtn.innerHTML = '<i class="fas fa-bolt"></i> Compress Image';
                compressBtn.disabled = false;
            }, 1500);
        });
        
        // Helper function to estimate base64 file size
        function getFileSizeFromBase64(base64) {
            // Remove metadata
            const base64Data = base64.split(',')[1];
            // Calculate size in bytes
            return (base64Data.length * 0.75);
        }
        
        // Download button event
        downloadBtn.addEventListener('click', function() {
            alert('In a real application, this would download your compressed image. For this demo, we\'re simulating the process.');
            // This would normally create a download link for the compressed image
        });
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Set initial slider value
            qualityValue.textContent = qualitySlider.value + '%';
            
            // Set initial reduction estimate
            const reduction = 100 - qualitySlider.value;
            reductionValue.textContent = Math.round(reduction * 0.7) + '-' + Math.round(reduction * 0.9) + '%';
        });
    </script>
</body>
</html>
